{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description": "Trial Lambda Pipeline Cloudformation deploy",
    "Resources":{
      "Tests3Bucket":{
        "Type":"AWS::S3::Bucket",
        "Properties":{
          "AccessControl":"Private",
          "BucketName": "trial-deployment-bucket"
        }
      },
      "TestLambdaRole":{
        "Type":"AWS::IAM::Role",
        "Properties":{
          "AssumeRolePolicyDocument":{
            "Version": "2012-10-17",
            "Statement":[
              {
                "Effect": "Allow",
                "Principal":{
                  "Service": [
                    "lambda.amazonaws.com"
                  ]
                },
                "Action":[
                  "sts:AssumeRole"
                ]
              }
            ]
          },
              "Path": "/",
              "Policies":[
                {
                  "PolicyName":"LogCreationPolicy",
                  "PolicyDocument":{
                    "Version":"2012-10-17",
                    "Statement":[
                      {
                        "Effect":"Allow",
                        "Action":"s3:*",
                        "Resource":"*"
                      },
                      {
                        "Effect":"Allow",
                        "Action":[
                          "logs:CreateLogGroup",
                          "logs:CreateLogStream",
                          "logs:PutLogEvents"
                        ],
                        "Resource":"arn:aws:logs:*:*:*"
                      }
                    ]
                  }
                }
              ]
          }
        },
      "TestLambda":{
        "Type":"AWS::Lambda::Function",
        "Properties":{
          "Handler":"threading_lambda.threading_test_lambda",
          "Runtime":"python3.6",
          "Timeout":"200",
          "Role":{
            "Fn::GetAtt": [
              "TestLambdaRole",
              "Arn"
            ]
          },
          "Code":{
            "S3Bucket":"codepipeline-us-east-1-110122302905",
            "S3Key":"TrialPipeLine/MyApp/8SURdRZ.zip"
          }
        }
      }
    }
}
