{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description": "Trial Lambda Pipeline Cloudformation deploy",
    "Resources":{
      "Tests3Bucket":{
        "Type":"AWS::S3::Bucket",
        "Properties":{
          "AccessControl":"Private",
          "BucketName": "TrialDeploymentBucket"
        }
      },
      "TestLambdaRole":{
        "Type":"AWS::IAM::Role",
        "Properties":{
          "AssumeRolePolicyDocument":{
            "Version": "2012-10-17",
            "Statement":[
              {
                "Effect": "Allow",
                "Principal":{
                  "Service": [
                    "lambda.amazonaws.com"
                  ]
                },
                "Action":[
                  "sts:AssumeRole"
                ]
              }
            ]
          },
              "Path": "/",
              "Policies":[
                {
                  "PolicyName":"LogCreationPolicy",
                  "PolicyDocument":{
                    "Version":"2012-10-17",
                    "Statement":[
                      {
                        "Effect":"Allow",
                        "Action":"s3:*",
                        "Resource":"*"
                      },
                      {
                        "Effect":"Allow",
                        "Action":[
                          "logs:CreateLogGroup",
                          "logs:CreateLogStream",
                          "logs:PutLogEvents"
                        ],
                        "Resource":"arn:aws:logs:*:*:*"
                      }
                    ]
                  }
                }
              ]
          }
        }
      }
    }
